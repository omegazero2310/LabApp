<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppLab.Views.StaffListingPage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:helper="clr-namespace:MobileAppLab.Utilities"
             xmlns:custom="clr-namespace:MobileAppLab.CustomControl"
             xmlns:local="clr-namespace:MobileAppLab.ViewModels" 
             NavigationPage.HasBackButton="True"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="True">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>

                <Frame Grid.Row="0"
                   BorderColor="LightGray"
                   HasShadow="True"
                   HeightRequest="125"
                   Margin="0,0,0,0" >
                    <Frame.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#72c3f6" Offset="0.1" />
                            <GradientStop Color="#000d6a" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>

                    <StackLayout Orientation="Horizontal" Margin="0,10,0,0" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="0.1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>

                            <Image Grid.Column="0" Source="{xct:ImageResource Id=MobileAppLab.AssetImages.icon_arrow_left_white.png}" Rotation="180" HorizontalOptions="Start" VerticalOptions="Center" Scale="3"/>
                            <Label Grid.Column="1" Text="Danh sách nhân viên" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="White" FontSize="Medium" FontAttributes="Bold" />
                            <Image Grid.Column="2" Source="{xct:ImageResource Id=MobileAppLab.AssetImages.icon_add48.png}" HorizontalOptions="End" VerticalOptions="Center" Scale="2.5" xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=White, Dark=White}"/>
                        </Grid>
                    </StackLayout>
                </Frame>

                <Frame Grid.Row="1"
                       CornerRadius="10" Margin="0,-15,0,0"
                       >
                    <StackLayout>
                        <Frame CornerRadius="50" BorderColor="Blue" Scale="0.9">
                            <Grid>
                                <custom:NoBorderEntry Grid.Row="0" Placeholder="Tìm kiếm" HeightRequest="20"/>
                                <ImageButton  VerticalOptions="Center"
                                HeightRequest="20"
                                HorizontalOptions="End"
                                Source="{xct:ImageResource Id=MobileAppLab.AssetImages.icon_search_blue.png}" Scale="5"/>
                            </Grid>

                        </Frame>
                        <RefreshView  Command="{Binding CommandLoadData}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
                            <CollectionView x:Name="ItemsListView"
                                            ItemsSource="{Binding Staffs}"
                                            SelectionMode="None" >
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="1">
                                            <SwipeView >
                                                <SwipeView.RightItems >
                                                    <SwipeItemView >
                                                        
                                                        <Grid>
                                                            <StackLayout Orientation="Vertical" WidthRequest="50" Grid.Column="1">
                                                                <Image Source="{xct:ImageResource Id=MobileAppLab.AssetImages.icon_edit48.png }"
                                                                   xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=blue, Dark=White}"  HorizontalOptions="Center" VerticalOptions="Center"/>
                                                                <Label Text="Edit" TextColor="Blue"  HorizontalOptions="Center" VerticalOptions="Center"/>
                                                                <StackLayout.GestureRecognizers>
                                                                    <TapGestureRecognizer
                                                                        NumberOfTapsRequired="1"
                                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:StaffListingViewModel}}, Path=CommandSwipeEdit}"
                                                                        CommandParameter="{Binding .}"
                                                                        />
                                                                </StackLayout.GestureRecognizers>
                                                            </StackLayout>
                                                            <StackLayout Orientation="Vertical" WidthRequest="50" Grid.Column="0">
                                                                <Image Source="{xct:ImageResource Id=MobileAppLab.AssetImages.icon_delete48.png }"
                                                                   xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=red, Dark=red}"  HorizontalOptions="Center" VerticalOptions="Center"/>
                                                                <Label Text="Delete" TextColor="Red"  HorizontalOptions="Center" VerticalOptions="Center"/>
                                                                <StackLayout.GestureRecognizers>
                                                                    <TapGestureRecognizer
                                                                        NumberOfTapsRequired="1"
                                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:StaffListingViewModel}}, Path=CommandSwipeDelete}"
                                                                        CommandParameter="{Binding .}"
                                                                        />
                                                                </StackLayout.GestureRecognizers>
                                                            </StackLayout>
                                                        </Grid>
                                                    </SwipeItemView>
                                                </SwipeView.RightItems>
                                                <StackLayout Margin="5" HorizontalOptions="Start" VerticalOptions="Start">
                                                    <StackLayout Orientation="Horizontal" HeightRequest="60">
                                                        <Frame Grid.Column="0"
                                                               CornerRadius="100" 
                                                               HeightRequest="50" 
                                                               WidthRequest="50" 
                                                               HorizontalOptions="Center" 
                                                               Padding="5" 
                                                               IsClippedToBounds="True" 
                                                               BorderColor="Blue">
                                                            <Image Source="{xct:ImageResource Id=MobileAppLab.AssetImages.icon_default_profile_pic.png}" >

                                                            </Image>
                                                        </Frame>
                                                        <Grid Grid.Column="1">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="3*"/>
                                                                <ColumnDefinition Width="0.81*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding UserName}" FontSize="Small" FontAttributes="Bold" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand"/>
                                                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding PositionID}" FontSize="Small" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand"/>
                                                            <Label Grid.Row="2" Grid.Column="0" Text="{Binding PhoneNumber}" FontSize="Small" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand"/>

                                                            <Label Grid.Row="2" Grid.Column="1" Text="DateHere" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand"/>
                                                        </Grid>


                                                    </StackLayout>
                                                    <StackLayout.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                        NumberOfTapsRequired="1"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:StaffListingViewModel}}, Path=ViewUserCommand}"
                                                        CommandParameter="{Binding .}">
                                                        </TapGestureRecognizer>
                                                    </StackLayout.GestureRecognizers>
                                                </StackLayout>

                                            </SwipeView>
                                        </Grid>


                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </RefreshView>
                    </StackLayout>
                </Frame>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>