<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MobileAppLab.Views.StaffListingPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custom="clr-namespace:MobileAppLab.CustomControl"
    xmlns:helper="clr-namespace:MobileAppLab.Utilities"
    xmlns:local="clr-namespace:MobileAppLab.ViewModels"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    NavigationPage.HasBackButton="True"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="True">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.7*" />
                    <RowDefinition Height="5*" />
                </Grid.RowDefinitions>

                <!--#region thanh công cụ và tiêu đề-->
                <Frame
                    Grid.Row="0"
                    Margin="0,0,0,0"
                    HasShadow="True"
                    HeightRequest="125">
                    <Frame.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0.1" Color="#72c3f6" />
                            <GradientStop Offset="1.0" Color="#000d6a" />
                        </LinearGradientBrush>
                    </Frame.Background>

                    <StackLayout Margin="0,10,0,0" Orientation="Horizontal">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontSize="Medium"
                                HorizontalOptions="CenterAndExpand"
                                Text="{helper:Translate Main_Tabbed_Page_Listing}"
                                TextColor="White"
                                VerticalOptions="CenterAndExpand" />
                            <Image
                                Grid.Column="2"
                                xct:IconTintColorEffect.TintColor="{AppThemeBinding Light=White,
                                                                                    Dark=White}"
                                HorizontalOptions="End"
                                Scale="2.5"
                                Source="{xct:ImageResource Id=MobileAppLab.AssetImages.icon_add48.png}"
                                VerticalOptions="Center">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding CommandNewStaff}" NumberOfTapsRequired="1" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Grid>
                    </StackLayout>
                </Frame>
                <!--#endregion-->

                <!--#region vùng chứa thanh tìm kiếm và danh sách-->

                <Frame
                    Grid.Row="1"
                    Margin="0,-15,0,0"
                    CornerRadius="10">
                    <StackLayout>
                        <!--#region Thanh tìm kiếm-->
                        <Frame
                            Margin="0"
                            Padding="0"
                            BorderColor="Blue"
                            CornerRadius="20">
                            <Grid Padding="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <custom:NoBorderEntry Grid.Column="0" x:Name="srcBar" Placeholder="{Binding FilterPrefix}" HeightRequest="50" Margin="10,0,0,0">
                                    <custom:NoBorderEntry.Behaviors>
                                        <xct:EventToCommandBehavior
                                            Command="{Binding CommandSearch}"
                                            CommandParameter="{Binding Text, Source={x:Reference srcBar}}"
                                            EventName="TextChanged" />
                                    </custom:NoBorderEntry.Behaviors>
                                </custom:NoBorderEntry>
                                <ImageButton Grid.Column="1"
                                    Aspect="AspectFill"
                                    BackgroundColor="#0B94F3"
                                    Command="{Binding CommandSelectFilter}"
                                    HorizontalOptions="CenterAndExpand"
                                    Scale="1.5"
                                    Margin="0,0,-10,0"
                                    VerticalOptions="CenterAndExpand" 
                                             CornerRadius="100">
                                    <ImageButton.Source>
                                        <FontImageSource FontFamily="{DynamicResource IconFontFamily}"
                                                         Glyph="{StaticResource IconSearch}"
                                                         Size="Large"
                                                         Color="White" />
                                    </ImageButton.Source>
                                </ImageButton>

                            </Grid>
                        </Frame>

                        <!--#endregion-->
                        <!--#region Danh sách nhân viên-->
                        <RefreshView Command="{Binding CommandLoadData}" IsRefreshing="{Binding IsRefreshing}">
                            <CollectionView
                                x:Name="ItemsListView"
                                ItemsSource="{Binding Staffs}"
                                SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Orientation="Vertical">
                                            <SwipeView SwipeStarted="SwipeView_SwipeStarted" SwipeEnded="SwipeView_SwipeEnded">
                                                <SwipeView.RightItems>
                                                    <SwipeItemView>
                                                        <!--#region lệnh quẹt phải của dòng-->
                                                        <Grid>
                                                            <StackLayout
                                                            Grid.Column="1"
                                                            Padding="0"
                                                            HorizontalOptions="Center"
                                                            VerticalOptions="Center">
                                                                <StackLayout
                                                                CompressedLayout.IsHeadless="true"
                                                                HorizontalOptions="Center"
                                                                Orientation="Vertical"
                                                                VerticalOptions="Center"
                                                                WidthRequest="50">
                                                                    <Image HorizontalOptions="Center" VerticalOptions="Center">
                                                                        <Image.Source>
                                                                            <FontImageSource
                                                                            FontFamily="{DynamicResource IconFontFamily}"
                                                                            Glyph="{StaticResource IconDelete}"
                                                                            Size="Large"
                                                                            Color="Red" />
                                                                        </Image.Source>
                                                                    </Image>
                                                                    <Label
                                                                    HorizontalOptions="Center"
                                                                    Text="{helper:Translate Label_Delete}"
                                                                    TextColor="Red"
                                                                    VerticalOptions="Center" />
                                                                </StackLayout>
                                                                <StackLayout.GestureRecognizers>
                                                                    <TapGestureRecognizer
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:StaffListingViewModel}}, Path=CommandSwipeDelete}"
                                                                    CommandParameter="{Binding .}"
                                                                    NumberOfTapsRequired="1" />
                                                                </StackLayout.GestureRecognizers>
                                                            </StackLayout>

                                                            <StackLayout
                                                            Grid.Column="0"
                                                            Padding="0"
                                                            HorizontalOptions="Center"
                                                            VerticalOptions="Center">
                                                                <StackLayout
                                                                CompressedLayout.IsHeadless="true"
                                                                HorizontalOptions="Center"
                                                                Orientation="Vertical"
                                                                VerticalOptions="Center"
                                                                WidthRequest="50">
                                                                    <Image HorizontalOptions="Center" VerticalOptions="Center">
                                                                        <Image.Source>
                                                                            <FontImageSource
                                                                            FontFamily="{DynamicResource IconFontFamily}"
                                                                            Glyph="{StaticResource IconEdit}"
                                                                            Size="Large"
                                                                            Color="Blue" />
                                                                        </Image.Source>
                                                                    </Image>
                                                                    <Label
                                                                    HorizontalOptions="Center"
                                                                    Text="{helper:Translate Label_Edit}"
                                                                    TextColor="Blue"
                                                                    VerticalOptions="Center" />
                                                                </StackLayout>
                                                                <StackLayout.GestureRecognizers>
                                                                    <TapGestureRecognizer
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:StaffListingViewModel}}, Path=CommandSwipeEdit}"
                                                                    CommandParameter="{Binding .}"
                                                                    NumberOfTapsRequired="1" />
                                                                </StackLayout.GestureRecognizers>
                                                            </StackLayout>

                                                        </Grid>
                                                        <!--#endregion-->
                                                    </SwipeItemView>
                                                </SwipeView.RightItems>
                                                <Grid Margin="1">
                                                    <!--#region gắn dữ liệu-->
                                                    <StackLayout Padding="0">
                                                        <StackLayout
                                                        Grid.Row="0"
                                                        Margin="5"
                                                        CompressedLayout.IsHeadless="true"
                                                        HorizontalOptions="Start"
                                                        VerticalOptions="Start">
                                                            <StackLayout
                                                            CompressedLayout.IsHeadless="true"
                                                            HeightRequest="60"
                                                            Orientation="Horizontal">
                                                                <!--#region ảnh đại diện-->
                                                                <Frame HeightRequest="60" WidthRequest="60" BorderColor="Blue" CornerRadius="100" Padding="0" >
                                                                    <xct:AvatarView
                                                                    HorizontalOptions="Center"
                                                                    Source="{Binding ProfilePicture, Converter={xct:ByteArrayToImageSourceConverter}}"
                                                                    VerticalOptions="Center"
                                                                    Size="60">
                                                                    </xct:AvatarView>
                                                                </Frame>

                                                                <!--#endregion-->
                                                                <!--#region thông tin chi tiết-->
                                                                <Grid Grid.Column="1">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                    </Grid.RowDefinitions>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="2.7*" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>

                                                                    <Label
                                                                    Grid.Row="0"
                                                                    Grid.Column="0"
                                                                    FontAttributes="Bold"
                                                                    FontSize="Small"
                                                                    HorizontalOptions="StartAndExpand"
                                                                    Text="{Binding StaffName}"
                                                                    VerticalOptions="StartAndExpand" />
                                                                    <Label
                                                                    Grid.Row="1"
                                                                    Grid.Column="0"
                                                                    FontSize="Small"
                                                                    HorizontalOptions="StartAndExpand"
                                                                    Text="{Binding PositionName}"
                                                                    VerticalOptions="StartAndExpand" />
                                                                    <Label
                                                                    Grid.Row="2"
                                                                    Grid.Column="0"
                                                                    FontSize="Small"
                                                                    HorizontalOptions="StartAndExpand"
                                                                    Text="{Binding Email}"
                                                                    VerticalOptions="StartAndExpand" />

                                                                    <Label
                                                                    Grid.Row="2"
                                                                    Grid.Column="1"
                                                                    HorizontalOptions="EndAndExpand"
                                                                    Text="{Binding DateCreated, StringFormat='{0:dd/MM/yyyy}'}"
                                                                    VerticalOptions="EndAndExpand" />
                                                                </Grid>
                                                                <!--#endregion-->
                                                            </StackLayout>
                                                        </StackLayout>
                                                        <StackLayout.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:StaffListingViewModel}}, Path=CommandView}"
                                                            CommandParameter="{Binding .}"
                                                            NumberOfTapsRequired="1" />
                                                        </StackLayout.GestureRecognizers>
                                                    </StackLayout>

                                                    <!--#endregion-->
                                                </Grid>
                                            </SwipeView>
                                            <BoxView 
                                               HeightRequest="1"
                                               HorizontalOptions="FillAndExpand"
                                               Color="LightGray"
                                               Margin ="5, 0, 5, 0"/>
                                        </StackLayout>
                                        
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </RefreshView>
                        <!--#endregion-->
                    </StackLayout>
                </Frame>
                <!--#endregion-->
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>